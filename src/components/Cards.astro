---
import Card from "./Card.astro";

const { cards } = Astro.props;
---

<div class="cards">
  {cards.map((card) => <Card {...card} />)}
</div>

<style>
  .cards {
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 1rem;
    padding: 2.7rem;
    margin: 0 0 0 0;
  }

  @media screen and (min-width: 920px) {
    .cards {
      flex-direction: row;
    }
  }
</style>
