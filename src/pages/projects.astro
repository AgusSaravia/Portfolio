---
import ProjectCard from "../components/ProjectCard.astro";
import Main from "../layouts/Main.astro";
---

<Main title="Projects">
  <h1 class="projects__title">Projects</h1>
  <div class="container">
    <ProjectCard
      projectImage="../Xanart-Image.webp"
      projectName="Xanart Tattoo"
      projectDescription="Landing page for a tattoo business"
      projectUrl="https://xanart-portofolio.netlify.app/"
    />
    <ProjectCard
      projectImage="../dollar_bot_pic.webp"
      projectName=" Dollar Bot"
      projectDescription="A bot that retrieves the dollar value from a Uruguayan exchange"
      projectUrl="https://github.com/AgusSaravia/Telegram-dollar-bot"
    />
  </div>
</Main>
<style>
  .container {
    display: flex;
    flex-direction: row;
    place-content: center;
  }
  h1 {
    --text-2xl: 7rem;
    --text-md: 3.5rem;
    font-size: var(--text-2xl);
    text-align: center;
  }
  @media screen and (max-width: 720px) {
    h1 {
      font-size: var(--text-md);
      text-align: center;
    }
    .container {
      flex-direction: column;
      padding: 1rem 0.5rem;
    }
  }
</style>
