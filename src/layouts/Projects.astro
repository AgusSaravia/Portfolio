---
import Main from "./Main.astro";
const { frontmatter } = Astro.props;
---

<Main title="Projects">
  <slot />
  <figcaption class="figure">
    <img src={frontmatter.image} alt="" height="auto" class="figure__image" />
  </figcaption>
</Main>

<style>
  h1 + h2 {
  }

  .figure {
    margin: 0;
  }

  .figure__image {
    max-width: 100%;
    border-radius: 10px;
  }

  .figure__caption {
    font-size: 0.9rem;
  }
</style>

